# =============================================================================
# AWS Account Configuration Template
# =============================================================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env file to version control
#
# Usage: cp .env.template .env
# Then edit .env with your actual configuration values
# =============================================================================

# -----------------------------------------------------------------------------
# Core AWS Configuration (REQUIRED for Day 1)
# -----------------------------------------------------------------------------

# Your AWS Account ID
# Expected value: 052162193815
AWS_ACCOUNT_ID=052162193815

# AWS Default Region
# Expected value: us-east-2 (Ohio)
AWS_DEFAULT_REGION=us-east-2

# Alternative region variable (for compatibility)
AWS_REGION=us-east-2

# S3 Bucket Prefix
# This will be used to create uniquely named S3 buckets
# Format: <prefix>-<bucket-type>-<account-id>
# Example: de-intern-2024-raw-data-052162193815
S3_BUCKET_PREFIX=de-intern-2024

# Project Name
# Used for resource naming and tagging
PROJECT_NAME=de-intern-2024-project

# -----------------------------------------------------------------------------
# S3 Buckets (Will be created during infrastructure setup)
# -----------------------------------------------------------------------------

# Raw data bucket (landing zone)
S3_RAW_BUCKET=${S3_BUCKET_PREFIX}-raw-data-${AWS_ACCOUNT_ID}

# Processed data bucket (cleansed/transformed data)
S3_PROCESSED_BUCKET=${S3_BUCKET_PREFIX}-processed-data-${AWS_ACCOUNT_ID}

# Curated data bucket (analytics-ready data)
S3_CURATED_BUCKET=${S3_BUCKET_PREFIX}-curated-data-${AWS_ACCOUNT_ID}

# Scripts and code bucket
S3_SCRIPTS_BUCKET=${S3_BUCKET_PREFIX}-scripts-${AWS_ACCOUNT_ID}

# -----------------------------------------------------------------------------
# RDS PostgreSQL Configuration (Week 1)
# -----------------------------------------------------------------------------

# RDS Instance endpoint (will be available after Terraform deployment)
RDS_HOST=

# RDS Port
RDS_PORT=5432

# RDS Database name
RDS_DATABASE=taxi_data

# RDS Username
RDS_USERNAME=admin

# RDS Password (CHANGE THIS - do not use default!)
# Must be at least 8 characters
RDS_PASSWORD=

# -----------------------------------------------------------------------------
# AWS Glue Configuration (Week 2)
# -----------------------------------------------------------------------------

# Glue Catalog Database name
GLUE_CATALOG_DATABASE=de_intern_2024_catalog

# Glue ETL Job names
GLUE_RAW_TO_PROCESSED_JOB=de-intern-2024-raw-to-processed
GLUE_PROCESSED_TO_CURATED_JOB=de-intern-2024-processed-to-curated

# -----------------------------------------------------------------------------
# Redshift Configuration (Week 4)
# -----------------------------------------------------------------------------

# Redshift Cluster endpoint (will be available after Terraform deployment)
REDSHIFT_HOST=

# Redshift Port
REDSHIFT_PORT=5439

# Redshift Database name
REDSHIFT_DATABASE=taxi_warehouse

# Redshift Username
REDSHIFT_USERNAME=admin

# Redshift Password (CHANGE THIS - do not use default!)
# Must be at least 8 characters, contain uppercase, lowercase, and numbers
REDSHIFT_PASSWORD=

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------

# Environment (dev, staging, prod)
ENVIRONMENT=dev

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Python environment
PYTHONPATH=src

# -----------------------------------------------------------------------------
# Data Download Settings (Week 1)
# -----------------------------------------------------------------------------

# NYC Taxi Data
# Year and months to download
TAXI_DATA_YEAR=2024
TAXI_DATA_MONTHS=1,2,3

# Data type (yellow, green, fhv, fhvhv)
TAXI_DATA_TYPE=yellow

# -----------------------------------------------------------------------------
# Optional: AWS Profile
# -----------------------------------------------------------------------------

# Uncomment if using named AWS profiles instead of default credentials
# AWS_PROFILE=default

# -----------------------------------------------------------------------------
# Development Settings
# -----------------------------------------------------------------------------

# Local data directory
LOCAL_DATA_DIR=./data

# Enable debug mode
DEBUG=false

# -----------------------------------------------------------------------------
# Tags (Applied to all AWS resources)
# -----------------------------------------------------------------------------

TAG_PROJECT=de-intern-2024
TAG_ENVIRONMENT=dev
TAG_OWNER=
TAG_COST_CENTER=
